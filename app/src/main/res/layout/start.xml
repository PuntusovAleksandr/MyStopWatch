    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_botton"
        android:layout_weight="1.2" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/start"
            android:id="@+id/bt_start"
            android:layout_weight="1"
            android:background="#79fd05"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/pausa"
            android:id="@+id/bt_pause"
            android:layout_weight="1"
            android:background="#defe04"
            android:layout_margin="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:id="@+id/ll_botton_floor">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/stop"
            android:id="@+id/bt_stop"
            android:background="#cd310d"
            android:layout_margin="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_floor"
        android:layout_weight="1.45"
        android:gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll_floor_vertical"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/aleksandrP"
                android:id="@+id/textView_myCompany"
                android:textColor="#adfa06"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/year"
                android:id="@+id/textView_year"
                android:singleLine="true"
                android:textColor="#adfa06" />
        </LinearLayout>
    </LinearLayout>
